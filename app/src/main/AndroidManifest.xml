<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oooof.jonnyjonny.boccwilloughby">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_bocclauncher23"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bocclauncher23_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".AboutUsActivity"
            android:label="About Us BOCC"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NewsActivity"
            android:label="BOCC News"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SermonActivity"
            android:label="Sermons"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".CalendarActivity"
            android:label="BOCC Calendar"
            android:parentActivityName=".MainActivity">

        </activity>
    </application>

</manifest>